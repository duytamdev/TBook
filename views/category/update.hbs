<form method="post" action="/category/{{category._id}}/update?_method=PUT">
    <h2 class="mt-4">UPDATE CATEGORY</h2>
    <div class="form-group">
        <label>Name </label>
        <input value="{{{category.name}}}" required name="name" type="text" class="form-control" placeholder="Eg. Văn Học" >
    </div>

    <div class="form-group">
        <label>Description</label>
        <textarea  style="height: 211px;" placeholder="Eg. ....."   name="description" type="text" class="form-control">{{{category.description}}}</textarea>
    </div>

    <button class=" btn btn-primary  mb-4 btn-add">Update</button>
</form>
